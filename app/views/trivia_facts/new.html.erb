<div class="row">
<div class="category_head"><h1>Add a new trivia Question</h1></div>
  <div class="small-6 large-centered columns">
    <%= form_for @trivia_fact do |f| %>

      <% if @trivia_fact.errors.any? %>
        <% @trivia_fact.errors.full_messages.each do |msg| %>
          <p class="alert-box alert"><%= msg %></p>
        <% end %>
      <% end %>

      <%= f.label :question %>
      <%= f.text_field :question %>
      <%= f.label :answer %>
      <%= f.text_field :answer %>
      <%= f.label :category_id %>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      <%= f.submit 'Submit', class: 'button tiny' %>
    <% end %>
  </div>
</div>
